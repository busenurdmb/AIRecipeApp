@page "/ai-recipe"
@inject HttpClient Http

<h3>AI Destekli Tarif Önerisi</h3>

<input @bind="ingredients" placeholder="Malzemeleri gir..." />
<button @onclick="GetRecipe">Tarif Al</button>

@if (recipeResult != null)
{
    <h4>Önerilen Tarif:</h4>
    <p>@recipeResult</p>
}

@code {
    private string ingredients = "";
    private string recipeResult;

    private async Task GetRecipe()
    {
        var ingredientList = ingredients.Split(',');
        var response = await Http.PostAsJsonAsync("https://localhost:7025/api/recipe/get-recipe", ingredientList);
        recipeResult = await response.Content.ReadAsStringAsync();
    }
}

